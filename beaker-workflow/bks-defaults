[defaults]
jobxml: AutoJob.xml

;
; el6 variants
;

[AutoJob.xml:el6.x86_64]
arch: x86_64
ks-append: ks/el6.ks
host-filters: pek
reserve-time: 24

[AutoJob.xml:el6.x86_64-intel]
arch: x86_64
ks-append: ks/el6.ks
host-filters: intel,pek
reserve-time: 24

[AutoJob.xml:el6.x86_64-intel.acceptance]
